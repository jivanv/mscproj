<Solver name="DefaultTestSolver">
  <FlawFilter component="HorizonFilter" policy="PartiallyContained"/>
  
  <ThreatManager defaultPriority="0">
    <FlawHandler component="StandardThreatHandler"/>
    <FlawFilter class-match="Battery"/>
  </ThreatManager>
  
  <OpenConditionManager defaultPriority="0">
    <FlawHandler component="StandardOpenConditionHandler"/>
  </OpenConditionManager>
  
  <UnboundVariableManager defaultPriority="0">
    <FlawFilter var-match="end"/>
    <FlawFilter component="InfiniteDynamicFilter"/>
    <FlawHandler component="StandardVariableHandler"/>
    <FlawHandler class="Battery" predicate="produce" variable="quantity" component="Max"/>
    <FlawHandler class="Memory" predicate="consume" variable="quantity" component="Max"/>
    <FlawHandler class="UVTRX" predicate="beaconSignal" variable="duration" component="Max"/>
    <FlawHandler class="FUNCUBE" predicate="educationalCommunicationsFUNCUBE" variable="duration" component="Max"/>
    <FlawHandler class="FUNCUBE" predicate="amateurCommunicationsFUNCUBE" variable="duration" component="Max"/>
    <FlawHandler class="SolarPanel" predicate="chargeBattery" variable="duration" component="Max"/>
  </UnboundVariableManager>
</Solver>